extends layout

block content
  link(link rel="stylesheet" href="/stylesheets/signin.css")
  div(class="container text-center")
    form(action="/login/logaction" method="post" class="form-signin")
      img(class="mb-4" src="/images/logo.jpg" width="150" height="150" )
      h1(class="h3 mb-3 font-weight-normal") Please Sign in
      label(for="inputEmail" class="sr-only") Email Address
      input(type="email" id="inputEmail" name="inpEmail" class="form-control" placeholder="Email address"  autofocus="")
      label(for="inputPassword" class="sr-only">Password)
      input(type="password" id="inputPassword" name="inpPassword" class="form-control" placeholder="Password")
      div(class="checkbox mb-3")
          input(type="checkbox" value="remember-me") 
          label Remember me  
      button(class="btn btn-lg btn-primary btn-block" type="submit") Login
      a(href="/auth/register" class="btn btn-md btn-link") Register
      p(class="mt-5 mb-3 text-muted") Quizlet 2020 